<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>Blog MVC</display-name>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>co.informatica.mvc.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>co.informatica.mvc.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>co.informatica.mvc.controllers.PostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>posts</servlet-name>
        <servlet-class>co.informatica.mvc.controllers.PostsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>co.informatica.mvc.controllers.UsersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comments</servlet-name>
        <servlet-class>co.informatica.mvc.controllers.CommentsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>posts</servlet-name>
        <url-pattern>/posts/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comments</servlet-name>
        <url-pattern>/comments/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>cors</filter-name>
        <filter-class>co.informatica.mvc.filters.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cors</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>